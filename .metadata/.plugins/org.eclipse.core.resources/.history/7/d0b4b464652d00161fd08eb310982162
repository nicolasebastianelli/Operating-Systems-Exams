#include <fcntl.h>
#include <stdio.h>
#include <unistd.h>
#include <signal.h>
#include <stdlib.h>
#include <string.h>
#include <sys/wait.h>
#include <time.h>

#define READ 0
#define WRITE 1

int main(int argc, char* argv[]) {
	char cstop,cecc;
	int fd1,fd2,fdp[2];
	if (argc != 5) {
			fprintf(stderr, "Numero di argomenti errato\n");
			exit(EXIT_FAILURE);
		}
	if (strlen(argv[3]) != 1) {
			fprintf(stderr, "cstop non è un carattere\n");
			exit(EXIT_FAILURE);
		}
		if (strlen(argv[4]) != 1) {
			fprintf(stderr, "cecc non è un carattere\n");
			exit(EXIT_FAILURE);
		}
		cstop=argv[3];
		cecc=argv[4];
		if (pipe(fdp) != 0) {
					fprintf(stderr, "errore nella creazione della pipe\n");
					exit(EXIT_FAILURE);
				}

}
